{
  "name": "chatrooms",
  "version": "1.0.0",
  "description": "A backend service that maintains multiple temporary chatrooms",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "clear": "rm -rf dist",
    "start": "node dist/index.js",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "setup-githooks": "chmod +x githooks/pre-push && cp githooks/pre-push ./.git/hooks"
  },
  "author": "Anshuman Dubey",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-validation": "^4.1.1",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "node-cron": "^4.1.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.0.0",
    "@types/socket.io": "^3.0.1",
    "jest": "^30.0.4",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  }
